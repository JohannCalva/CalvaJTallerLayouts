        <FlexLayout Direction="Row"
                    Wrap="Wrap"
                AlignItems="Center"
                JustifyContent="Start">

            <Button Text="Do-Nothing Button"
                    WidthRequest="100"
                    HeightRequest="50"
                    />
            <Button Text="Do-Nothing Button"
                    WidthRequest="100"
                    HeightRequest="50"
                    />  
            <Button Text="Do-Nothing Button"
                    WidthRequest="100"
                    HeightRequest="50"
                    />
            <Button Text="Do-Nothing Button"
                    WidthRequest="100"
                    HeightRequest="50"
                    />
        </FlexLayout>
        <Button
                x:Name="BotonIrAAbsoluteLayout"
                Text="Ir a Absolute Layout"
                Clicked="BotonIrAAbsoluteLayout_Clicked"/>
    </StackLayout>
</ContentPage>