<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalvaJLayouts.FlexLayoutPage"
             Title="Flex Layout">
    <StackLayout Padding="20" Spacing="20">
        <FlexLayout Direction="Row"
                    Wrap="Wrap"
                AlignItems="Center"
                JustifyContent="Start">

            <Button Text="Boton 1"
                    WidthRequest="100"
                    HeightRequest="50"
                    Margin="5"
                    BackgroundColor="GreenYellow"
                    />
            <Button Text="Boton 2"
                    WidthRequest="100"
                    HeightRequest="50"
                    Margin="5"
                    BackgroundColor="Coral"
                    />
            <Button Text="Boton 3"
                    WidthRequest="100"
                    HeightRequest="50"
                    Margin="5"
                    BackgroundColor="PaleVioletRed"
                    />
            <Button Text="Boton 4"
                    WidthRequest="100"
                    HeightRequest="50"
                    Margin="5"
                    BackgroundColor="#355c7d"/>
        </FlexLayout>
        <Button
                x:Name="BotonIrAAbsoluteLayout"
                Text="Ir a Absolute Layout"
                Clicked="BotonIrAAbsoluteLayout_Clicked"
                BackgroundColor="#034f84"
                TextColor="White"
            />
    </StackLayout>
</ContentPage>